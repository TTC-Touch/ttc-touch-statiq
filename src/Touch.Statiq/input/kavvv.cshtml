@{
    ViewBag.title = "TTC Touch - KAVVV";

    var seizoen = 23;
    var clubId = 9082;

    ViewBag.ploegen = new Ploeg[] {
        new Ploeg('A', 1, 305, 1),
        new Ploeg('B', 4, 308, 10),
        new Ploeg('C', 4, 308, 1),
        new Ploeg('D', 6, 310, 10),
        new Ploeg('E', 7, 311, 10)
    };
}

<div class="row">
    <div class="col-lg-12">
        <img class="kavvv-logo" src="/images/kavvv.png" type="image/png">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a role="button" class="btn btn-info" href="https://tafeltennis.kavvv.be/?menu=6&club_id=@clubId&season=@seizoen">Sterktelijst</a>
    </div>
</div>
@foreach (Ploeg ploeg in ViewBag.ploegen)
{
    <div class="row">
        <div class="col-lg-12">
            <h4>Touch @ploeg.Letter (@(ploeg.Afdeling)e afdeling)</h4>
            <p>
                <a role="button" class="btn btn-outline-dark"
               href="https://tafeltennis.kavvv.be/?menu=3&type=2&div_id=@(ploeg.AfdelingId)_@(ploeg.Letter)&team_id=@(ploeg.TeamId)&club_id=@clubId&season=@seizoen">Kalender</a>
                <a role="button" class="btn btn-outline-dark fas fa-print" target="_blank"
               href="https://tafeltennis.kavvv.be/?menu=3&type=2&pdf=1&compute_pdf=1&div_id=@(ploeg.AfdelingId)_@(ploeg.Letter)&team_id=@(ploeg.TeamId)&club_id=@clubId&season=@seizoen"></a>
                <a role="button" class="btn btn-outline-dark fas fa-calendar-alt" target="_blank"
               href="https://tafeltennis.kavvv.be/afdeling/ics/@(ploeg.AfdelingId)/@(ploeg.TeamId)" title="importeer dit bestand in je digitale agenda"></a>
                <a role="button" class="btn btn-primary"
               href="https://tafeltennis.kavvv.be/?menu=5&div_id=@(ploeg.AfdelingId)_@(ploeg.Letter)&club_id=@clubId&season=@seizoen">Resultaten</a>
            </p>
        </div>
    </div>
}
