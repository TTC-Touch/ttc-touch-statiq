<!doctype html>
@{
    IHtmlContent Helper(System.Func<object?, IHtmlContent> body) => body(null);
    IHtmlContent MenuItem(string page, string icon, string label)
    {
        var linkClass = "nav-link";
        var href = page + ".html";
        if (page == "index")
        {
            href = "./";
        }
        if (ViewContext.View.Path.EndsWith(page + ".cshtml", StringComparison.OrdinalIgnoreCase))
        {
            linkClass = "nav-link active";
        }
        return Helper(
            @<li class="nav-item">
                <a class="@linkClass" href="@href">
                    <span class="fas fa-@icon"></span>
                    @label
                </a>
            </li>);
    }
}
<html class="no-js" lang="nl-be">
<head>
    <meta charset="utf-8">
    <meta name="description" content="TTC Touch is een tafeltennisclub uit Wommelgem, die met 4 ploegen deelneemt aan de competitie van de KAVVV vriendenclubs.">
    <meta name="keywords" content="ttc touch,touch,tafeltennis,ping pong,wommelgem,avvv,kavvv,fort,fort 2">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->

    <link rel="stylesheet" href="styles/main.css">
    <title>@(ViewBag.title ?? "TTC Touch")</title>
</head>
<body>
    <div class="container">
        <div class="header mt-2 mb-3">
            <ul class="nav nav-pills nav-fill">
                @MenuItem("index", "home", "TTC Touch")
                @MenuItem("geschiedenis", "book", "Clubgeschiedenis")
                @MenuItem("lokaal", "map-marker-alt", "Lokaal")
                @MenuItem("contact", "envelope", "Contact")
                @MenuItem("kavvv", "table-tennis", "KAVVV")
            </ul>
        </div>

        @RenderBody()
    </div>

